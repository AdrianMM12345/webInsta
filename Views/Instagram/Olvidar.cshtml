
@{
    ViewBag.Title = "Restablecer contraseña - Instagram";
    ViewBag.Style = "olvidar.css";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header class="header">
    <a href="@Url.Action("Index", "Instagram")">
        <div class="logoig">
            <img src="~/Content/img/instagram-logo-black-on-white.png" alt="Logo de Instagram" />
        </div>
    </a>
    <div class="auth-buttons">
        <a href="@Url.Action("Login","Instagram")" class="btn btn-enter">Entrar</a>
        <a href="@Url.Action("Registrar","Instagram")" class="btn btn-register">Registrarte</a>
    </div>
</header>

<div class="contenido">
    <div class="log-on border_insc">
        <div class="logo">
            <img src="~/Content/img/candado2.jpg" alt="Instagram Logo">
        </div>
        <p class="info">¿Tienes problemas para entrar?</p>
        <p class="info-2">Introduce tu correo electrónico, número de teléfono o nombre de usuario y te enviaremos un enlace para que vuelvas a entrar en tu cuenta.</p>
        <form method="POST" action="@Url.Action("Olvidar","Instagram")">
            <div>
                <input type="email" name="correo" id="correo" maxlength="50" placeholder="Teléfono, usuario o correo electrónico">
            </div>
            <button type="submit" class="log_btn">Enviar enlace de acceso</button>
        </form>
        <div class="olvide">
            <a href="https://help.instagram.com/374546259294234">
                ¿No puedes cambiar tu contraseña?
            </a>
        </div>
        <div class="otros">
            <div class="separador">
                <span class="linea"></span>
                <span class="o">o</span>
                <span class="linea"></span>
            </div>
        </div>
        <p class="l1">
            <a href="@Url.Action("Registrar", "Instagram")">Crear cuenta nueva</a>
        </p>

    </div>
    <p class="relleno">
        <a href="@Url.Action("Login", "Instagram")" class="volver-btn">Volver al inicio de sesión</a>
    </p>
</div>